<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myActivity"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageButton1"/>

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50percent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:tag = "myImageView 1"
        android:id="@+id/imageButton1"
        android:src="@drawable/menu_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageButton2"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MyImageViewStyle"/>

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50percent"
        android:id="@+id/imageButton2"
        android:tag = "myImageView 2"
        android:src="@drawable/menu_work"
        app:layout_constraintLeft_toRightOf="@id/imageButton1"
        app:layout_constraintRight_toLeftOf="@id/imageButton3"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MyImageViewStyle"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:src="@drawable/menu_visibility"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50percent"
        android:id="@+id/imageButton3"
        android:tag = "myImageView 3"
        app:layout_constraintLeft_toRightOf="@id/imageButton2"
        app:layout_constraintRight_toLeftOf="@id/imageButton4"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MyImageViewStyle"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:src="@drawable/menu_addchart"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50percent"
        android:id="@+id/imageButton4"
        android:tag = "myImageView 4"
        app:layout_constraintLeft_toRightOf="@id/imageButton3"
        app:layout_constraintRight_toLeftOf="@id/imageButton5"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MyImageViewStyle"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:src="@drawable/menu_home"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50percent"
        android:id="@+id/imageButton5"
        android:tag = "myImageView 5"
        app:layout_constraintLeft_toRightOf="@id/imageButton4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MyImageViewStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>