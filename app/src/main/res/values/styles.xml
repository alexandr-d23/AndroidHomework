<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="AppTheme2" parent= "Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyActionButtonStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:gravity">center</item>
        <item name="android:padding">19dip</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50percent">
        <item name="cornerSize">50%</item>
    </style>

</resources>